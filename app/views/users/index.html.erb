<div class="container is-fluid">
 <div class="columns">
  <div class="column is-9">
    <h2 class="title is-3">User Details </h2>
  </div>
  <div class="column is-3">
 <!--      <%#= link_to new_user_path, class: "button is-success is-outlined" do %> Add User <%# end %> -->
 <h2 class="title is-3">Add New User</h2>
  </div>
</div>

<% if @users.empty? %> 
   <p> table is empty </p> 
<% else %>


<div class="columns">
  <div class="column is-9">

	  	<table class="table is-bordered is-striped">
			<thead>
				<tr>
					<th>Sl.no</th>
					<th>Full Name</th>
					<th>Email</th>
					<th>Phone</th>
					<th>Role</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @users.each_with_index do |user, index| %>
					<tr>
						<td><%= index + 1 %></td>
						<td><%= user.full_name %></td>
						<td><%= user.email %></td>
						<td><%= user.phone %></td>
						<td><%= user.role.try(:name) %></td>
						<td><%= link_to user_path(user), class: "button is-success" do %> Show <% end %></td> 
						<td><%= link_to edit_user_path(user), class: "button is-info" do %> Edit <% end %></td>
						<td><%= link_to user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" do %> Delete <% end %></td>
					</tr>
				<% end %>
			</tbody>
		</table>

  </div>

  <div class="column is-3">

  	<div id="errors">
  	</div>

  	<div class="index-form">

		<%= form_for User.new,remote: true do |f| %>

				<div class="columns">
			  		<div class="column is-3">
			    		<%= f.label :full_name  %>
			  		</div>
			  		<div class="column is-9">
			     		<%= f.text_field :full_name %>
			  		</div>
				</div>

				<div class="columns">
			  		<div class="column is-3">
			    		<%= f.label :email %>
			  		</div>
			  		<div class="column is-9">
			  			<%= f.text_field :email %>
			  		</div>
				</div>


				<div class="columns">
			  		<div class="column is-3">
			    		<%= f.label :phone %>
			  		</div>
			  		<div class="column is-9">
			     		<%= f.text_field :phone %>
			  		</div>
				</div>

				<div class="columns">
			  		<div class="column is-3">
			    		<%= f.label :role_id %>
			  		</div>
			  		<div class="column is-9">
			     		<%= f.collection_select :role_id, Role.all, :id, :name, prompt: "Select Role" %>
			  		</div>
				</div>

				<div class="columns">
			  		<div class="column is-4 is-offset-8">
			    		<%= f.submit "Submit", class: "button is-success"%>
			  		</div>
				</div>

		<% end %>
	</div>
  </div>
 </div>

<% end %>
</div>

