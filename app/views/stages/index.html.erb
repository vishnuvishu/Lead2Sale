<div class="container is-fluid">
 <div class="columns">
  <div class="column is-10">
    <h2 class="title is-3">Stage Details</h2>
  </div>
  <div class="column is-2">
     <a class="button is-success is-outlined modal-button" data-target="modal1">Add New Stage</a>
  </div>
 
</div>


  <% if @stages.empty? %>
     <p> table is empty</p> 
  <% else %>

 <table class="table is-bordered is-striped">
	<thead>
		<tr>
			<td>Sl.no</td>
			<td>Name</td>
			<td>Description</td>
			<td>Interest Level</td>
			<th colspan="3"></th>
		</tr>
		</tr>
	</thead>
	<tbody>
		<% @stages.each_with_index do |stage, index| %>
			<tr>
				<td><%= index + 1 %></td>
				<td><%= stage.name %></td>
				<td><%= stage.description %></td>
				<td><%= stage.interest_level %></td>
				<!-- <td><%#= link_to "Show", stage_path(stage) %></td> -->
				<td><%= link_to edit_stage_path(stage), class: "button is-info" do %> Edit <% end %></td>
				<td><%= link_to stage_path(stage), method: :delete, data: { confirm: 'Are you sure?' } , class: "button is-danger" do %> Delete <% end %></td>
			</tr>
		<% end %>
	</tbody>
 </table>

 <% end %>

 <%#= link_to "Add stage", new_stage_path %>
 </div>



 <div class="modal" id="modal1">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Add New Stage</p>
      <button class="delete"></button>
    </header>
    <section class="modal-card-body">
   
    	   <%= form_for Stage.new do |f| %>

  				<div class="columns">
			  		<div class="column is-3	">
			    		<%= f.label :name  %>
			  		</div>
			  		<div class="column is-5">
			     		<%= f.text_field :name %>
			  		</div>
				</div>

				<div class="columns">
			  		<div class="column is-3">
			    		<%= f.label :description %>
			  		</div>
			  		<div class="column is-5">
			  			<%= f.text_field :description %>
			  		</div>
				</div>

				<div class="columns">
			  		<div class="column is-3">
			    		<%= f.label :interest_level %>
			  		</div>
			  		<div class="column is-5">
			     		<%= f.text_field :interest_level %>
			  		</div>
				</div>
    	 
    </section>
    <footer class="modal-card-foot">
      <%= f.submit "Submit", class: "button is-success"%>
      <a class="button">Cancel</a>
    </footer>
      <% end %>
  </div>
</div>
